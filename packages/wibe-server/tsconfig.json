{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2022",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "outDir": "lib"
    },
    "exclude": ["node_modules", "lib"],
    "include": ["src"]
}
