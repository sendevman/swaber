{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"files": {
		"include": ["**/*.ts", "**/*.js"],
		"ignore": [
			"**/dist/**",
			"**/node_modules/**",
			".vitepress/**",
			"build/**"
		],
		"ignoreUnknown": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"useTemplate": "off"
			}
		}
	},
	"json": {
		"formatter": {
			"indentWidth": 4
		}
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
